<%= form_for @activity, :html => {class: 'new_user form-horizontal'} do |f| %>
    <div class="row"><legend class="col-md-4 col-md-offset-4">Create Activity:</legend></div>
    <fieldset>
        <div class="form-group">
            <%= f.label :name, 'Name*', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                 <%= f.text_field :name, required: true,  placeholder: "What's your place?" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :link, 'Link', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :link, placeholder: "Link" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :image_url, 'Image URL', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :image_url, placeholder: "Image URL" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :note, 'Note', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :note, placeholder:"Note" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :category, 'Category', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :category, placeholder: "Category" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :neighborhood, 'Neighborhood', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :neighborhood, placeholder: "Neighborhood" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :date_completed, 'Date Completed', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.date_field :date_completed, placeholder: "Date completed" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :rating, 'Rating', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.number_field(:rating, placeholder:"Rating", in: 0.0..5.0) %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Add Activity', class: 'btn btn-info' %>
            </div>
        </div>
    </fieldset>
<% end %>