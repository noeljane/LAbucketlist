<%= link_to("Copy To Your List", copy_activity_path, method: 'post') %>
<h1><%= @activity.name %></h1>

<% if logged_in? && current_user == @activity.user %>
    <div>
        <%= link_to("Edit",edit_activity_path(@activity)) %>
        <%= link_to("Delete",activity_path(@activity), method: "delete") %>
    </div>
 <% end %>

<ul>
    <li>
        <div><%=image_tag(@activity.image_url) %></div>
        <div>More info: <%= link_to(@activity.link) %></div>
        <div>Note: <%= @activity.note %></div>
        <div>Date Completed: <%= @activity.date_completed %></div>
        <div>Neighborhood: <%= @activity.neighborhood %></div>
        <div>Rating(1-5): <%= "â­" * @activity.rating.to_i %> </div>
        <div>Done by: <%= link_to(@user.name, user_path(@user)) %></div>
    </li>
</ul>

<!-- Comment Form -->
<% if flash[:danger] %>
    <div class = "alert alert-danger">
        <%= flash[:danger] %>
    </div>
<% end %>
<%= form_for @comment, url:activity_comments_path(@activity) do |f| %>
    <%= f.text_area :body, placeholder: "Comment on this..." %>
    <%=f.submit %>
<% end %>
<!-- -->

<!-- List comments for this Activity -->
<ul>
<% @activity.comments.each do |c| %>
    <li><%= c.body %></li>
    <div>
    <% if logged_in? && current_user == c.user %>
        <%= link_to("Edit",edit_activity_comment_path(@activity, c)) %>
        <%= link_to("Delete",activity_comment_path(@activity, c), method: "delete") %>
    <% end %>

    </div>
</div>
<% end %>
</ul>
